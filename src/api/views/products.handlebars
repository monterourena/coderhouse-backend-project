<div>
  <h1>Hola, {{user.name}}</h1>
  <div>
    <button id='currentButton'>Profile</button>
    <button id='cartButton'>Review cart</button>
    <button id='logoutButton'>Log out</button>
  </div>
</div>

<div>
  <h3>Available Products</h3>

  {{#each products}}
    <div style='margin: 16px; padding:8px; background-color:#f2e6e8'>
      <h3>{{this.title}}</h3>
      <h4>{{this.description}}</h4>
      <p> ID: {{this._id}} Code: {{this.code}}</p>
      <p> Price: {{this.price}}</p>
      <p> Status: {{this.status}}</p>
      <p> Category: {{this.category}}</p>
      <button onclick="addToCart('{{../user.cart}}','{{this._id}}')">Add to cart</button>
    </div>
  {{/each}}

</div>

<div>
  {{#if paginationParams.hasPrevPage}}
    <a href='/products?page={{paginationParams.prevPage}}'><button>Prev</button></a>
  {{else}}
    <button disabled='true'>Prev</button>
  {{/if}}
  <div>{{paginationParams.page}}</div>
  {{#if paginationParams.hasNextPage}}
    <a href='/products?page={{paginationParams.nextPage}}'><button>Next</button></a>
  {{else}}
    <button disabled='true'>Prev</button>
  {{/if}}

</div>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src='/config.js'></script>
<script src='/js/products.handler.js'></script>
<script src='./js/productsView.utils.js'></script>